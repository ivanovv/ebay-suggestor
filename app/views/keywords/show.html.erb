<div style='padding-bottom: 200px;'>
<%= render 'form' %>
</div>

<div id="results-count" class="jumbotron">
  You looked for
  <h3><%= @keyword.value %></h3>
  <p><%= @keyword.suggestion_count %> suggestions found.</p>
</div>

<% suggestions_count = @keyword.suggestions_count %>

<div id="suggestions-table">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th>Keyword</th>
      <th>Count</th>
    </tr>

    <% suggestions_count.each do |k,v| %>
    <tr>
      <td><%= k %></td>
      <td><%= v %></td>
    </tr>
    <% end %>

  </table>
</div>


<% @keyword.suggestions.order(:value).each do |sug|%>

<div class="list-group">
  <a href="#" class="list-group-item active">
    <%= sug.value %>
  </a>
  <% sug.variants.each do |v| %>
      <a href="#" class="list-group-item"><%= v %></a>
  <% end %>

</div>

<% end %>
